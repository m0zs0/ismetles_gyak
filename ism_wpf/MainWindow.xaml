<Window x:Class="ism_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ism_wpf"
        mc:Ignorable="d"
        Title="User Management" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0"  x:Name="dgUsers" AutoGenerateColumns="False" CanUserAddRows="False" 
                  Margin="10" SelectionMode="Single" SelectionUnit="FullRow" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*"/>
                <DataGridTextColumn Header="Név" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Jelszó" Binding="{Binding Password}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Regisztráció Dátuma" Binding="{Binding RegistrationDate}" Width="*"/>
                <DataGridTextColumn Header="Szint" Binding="{Binding Level}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="AddUserButton" Content="Új felhasználó" Width="100" Margin="5" Click="AddUserButton_Click"/>
            <Button x:Name="DeleteUserButton" Content="Törlés" Width="100" Margin="5" Click="DeleteUserButton_Click"/>
            <Button x:Name="SaveButton" Content="Mentés CSV-be" Width="100" Margin="5" Click="SaveButton_Click"/>
            <Button x:Name="LoadButton" Content="Betöltés CSV-ből" Width="100" Margin="5" Click="LoadButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
